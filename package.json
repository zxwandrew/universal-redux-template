{
  "name": "reactexperiment",
  "version": "1.0.0",
  "description": "react webpack",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node ./dist/server.min.js",
    "start-dev": "node ./dist/server.min.js",

    "build-client": "webpack --config webpack.client.js --colors --display-error-details",
    "build-server": "webpack --config webpack.server.js --colors --display-error-details",
    "build": "node node_modules/concurrently/src/main \"npm run build-server\" \"npm run build-client\"",

    "watch-server": "node node_modules/webpack/bin/webpack --watch --verbose --colors --display-error-details --config webpack.server.watch.js ",
    "watch-server-start": "node node_modules/just-wait --pattern \"dist/*.js\" && npm run start-dev",
    "watch-server-start-debug": "node node_modules/just-wait --pattern \"dist/*.js\" && node-debug -p 8888 ./dist/server.min.js",
    "watch-client": "node node_modules/webpack-dev-server/bin/webpack-dev-server --config webpack.client.watch.js",

    "watch": "node node_modules/concurrently/src/main --kill-others \"npm run watch-server-start\" \"npm run watch-server\" \"npm run watch-client\"",
    "watch-debug": "node node_modules/concurrently/src/main --kill-others \"npm run watch-server-start-debug\" \"npm run watch-server\" \"npm run watch-client\"",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "andrew wang",
  "license": "ISC",
  "devDependencies": {
    "babel-plugin-react-html-attrs": "^2.0.0",
    "concurrently": "^2.0.0",
    "copy-webpack-plugin": "^1.1.1",
    "forever": "^0.15.1",
    "just-wait": "^1.0.4"
  },
  "dependencies": {
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.3",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-class-properties": "^6.5.2",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-preset-stage-0": "^6.5.0",
    "history": "^2.0.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.9.0",
    "koa": "^1.1.2",
    "koa-favicon": "^1.2.0",
    "koa-react-view": "^2.0.0",
    "koa-static": "^2.0.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-router": "^2.0.0",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1",
    "webpack-node-externals": "^1.0.0"
  }
}
